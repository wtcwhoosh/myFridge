<h1>Listing settings</h1>

<table>
  <thead>
    <tr>
      <th>Circle</th>
      <th>Type</th>
      <th>Invite only</th>
      <th>Show members</th>
      <th></th>
      <th></th>
      <th></th>
    </tr>
  </thead>

  <tbody>
    <% @settings.each do |setting| %>
      <tr>
        <td><%= setting.circle_id %></td>
        <td><%= setting.type %></td>
        <td><%= setting.invite_only %></td>
        <td><%= setting.show_members %></td>
        <td><%= link_to 'Show', setting %></td>
        <td><%= link_to 'Edit', edit_setting_path(setting) %></td>
        <td><%= link_to 'Destroy', setting, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

