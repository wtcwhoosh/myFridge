<fieldset>
  <%= f.hidden_field :recipe_id, :value=>params[:recipe_id] %>
  <%= f.collection_select(:ingredient_id, Ingredient.all, :id, :name) %>
  <%= f.number_field(:quantity, in: 1...10) %><%= f.label :quantity, 'Parts'  %>
  <%= f.hidden_field :unit, :value => 'parts' %>
  <%= f.hidden_field :_destroy %>
  <%= link_to "remove", '#', class: "remove_fields"%>
</fieldset>


