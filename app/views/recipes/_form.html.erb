<%= form_for(@recipe) do |f| %>
  <% if @recipe.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(@recipe.errors.count, "error") %> prohibited this recipe from being saved:</h2>

      <ul>
      <% @recipe.errors.full_messages.each do |msg| %>
        <li><%= msg %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

    <p>
      By <%= @recipe.user.name %>
    </p>
    <%= f.hidden_field :user_id %>


    <div class="field">
    Recipe name<br />
    <%= f.text_field :name %>
  </div>
  <div class="field">
    <%= f.label :type_id %><br />
    <% all_types = Type.all %>
    <% menu_items = all_types.map { |c| [ c.name, c.id ] } %>
    <%= f.select :type_id, menu_items, :class => 'form-control' %>
  </div>
  <div class="field">
    <%= f.label :instruction %><br />
    <%= f.text_area :instruction %>

  </div>


    <div class="actions">
    <%= f.submit %>
  </div>
<% end %>
