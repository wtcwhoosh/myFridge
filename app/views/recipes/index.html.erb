<h1>Listing recipes</h1>

<table>
  <tr>
    <th>Name</th>
    <th>Instruction</th>
    <th></th>
    <th></th>
    <th></th>
  </tr>

<% @recipes.each do |recipe| %>
  <tr>
    <td><%= recipe.name %></td>
    <td><%= recipe.instruction %></td>
    <td><%= link_to 'Show', recipe %></td>
    <td><%= link_to 'Edit', edit_recipe_path(recipe) %></td>
    <td><%= button_to  "delete", recipe, :method=>:delete, :class=>:destroy %> </td>

  </tr>
<% end %>
</table>

