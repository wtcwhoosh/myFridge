<div class="col-xs-3">
<%= form_for(@recipe) do |f| %>
    <% if @recipe.errors.any? %>
        <div id="error_explanation">
          <h2><%= pluralize(@recipe.errors.count, "error") %> prohibited this recipe from being saved:</h2>
          <ul>
            <% @recipe.errors.full_messages.each do |msg| %>
                <li><%= msg %></li>
            <% end %>
          </ul>
        </div>
    <% end %>
    <p>
      By <%= @recipe.user.name if @recipe.user %>
    </p>
    <%= f.hidden_field :user_id, :value => current_user.id %>
    <div class="field">
      <b>Recipe Name</b><br />
      <%= f.text_field :name %>
    </div>
    <br>
    <b>Ingredient:</b>
    <%= f.fields_for :recipe_ingredients do |build| %>
        <%= render 'recipe_ingredient_fields', :f => build %>
    <% end %>
    <b><%= link_to_add_fields "Add More Ingredients", f, :recipe_ingredients %></b>
    <div class="field">
      <br>
      <%= f.label :instruction, "Instructions" %><br />
      <%= f.text_area :instruction %>
    </div>
      <div class="actions">
      <%= f.submit %>
      <%= link_to 'Back', recipes_path %>
    </div>
</div>
<div class="col-xs-9">
<%= f.label :drink_type_id, "Drink Type:" %> <br>
<%= f.collection_radio_buttons :drink_type_id, DrinkType.all, :id, :name %><br>

<%= f.label :mood_id, "Drink Mood:" %> <br>
<%= f.collection_radio_buttons :mood_id, Mood.all, :id, :name %><br>

<%= f.label :setting_id, "Drink Setting:" %> <br>
<%= f.collection_radio_buttons :setting_id, Setting.all, :id, :name %><br>




</div>
  
<% end %>
