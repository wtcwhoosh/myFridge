<%= form_for(@fridge_ingredient) do |f| %>
  <% if @fridge_ingredient.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(@fridge_ingredient.errors.count, "error") %> prohibited this fridge_ingredient from being saved:</h2>

      <ul>
      <% @fridge_ingredient.errors.full_messages.each do |msg| %>
        <li><%= msg %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <div class="field">
    <%= f.label :user_id %><br />
    <%= f.number_field :user_id %>
  </div>
  <div class="field">
    <%= f.label :ingredient_id %><br />
    <%= f.number_field :ingredient_id %>
  </div>
  <div class="field">
    <%= f.label :quantity %><br />
    <%= f.text_field :quantity %>
  </div>
  <div class="actions">
    <%= f.submit %>
  </div>
<% end %>
