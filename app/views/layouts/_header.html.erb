<div class="navbar navbar-inverse navbar-fixed-top">
  <div class="container-fluid">
    <div class="navbar-header">
      <button type="button" class="navbar-toggle" data-toggle="collapse" data-target=".navbar-collapse">
        <span class="icon-bar"></span>
        <span class="icon-bar"></span>
        <span class="icon-bar"></span>
      </button>
    </div>
    <div class="collapse navbar-collapse">
      <ul class="nav navbar-nav">
        <li><a href="/fridge_ingredients/new"><%= image_tag 'logo.png' %></a></li>
        <li><%= link_to "Fridge", new_fridge_ingredient_path %></li>
	<li><%#= link_to "Users", users_path %></li>
        <li><%#= link_to "Drinks", recipes_path %></li>
        <li><%= link_to "Create your Drink", new_recipe_path %></li>
      </ul>
      <%= form_tag(users_path, method: "get", class: "navbar-form navbar-left", role: "search") do %>
      <div class="form-group">
	<%= text_field_tag :search, params[:search], placeholder: "Search users, recipes, events, etc.", class: "form-control"  %>
      </div>
      <%= button_tag "Search", class: "btn btn-primary" %>
      <% end %>     
      <ul class="nav navbar-nav navbar-right">
        <% if user_signed_in? %>
        <li class="dropdown">
          <a href="#" class="dropdown-toggle" data-toggle="dropdown">
            <%= current_user.email %>
            <b class="caret"></b>
          </a>
          <ul class="dropdown-menu">
            <li><%#= link_to 'profile', user_path(user) %></li>
            <li><%= link_to 'logout', destroy_user_session_path, method: :delete %></li>
          </ul>
        </li>
        <% else %>      
	<%= form_for("user", :html => { :class => "navbar-form navbar-right", :role => "form" }, :url => user_session_path) do |f| %>
	<div class="form-group"><%= f.email_field :email, placeholder: "email address", class: "form-control", :autofocus => true %></div>
	<div class="form-group"><%= f.password_field :password, placeholder: "password", class: "form-control" %></div>
        <%= f.submit "Sign In", class: "btn btn-primary" %>
	<% end %>
	<% end %>
      </ul>
    </div><!--/.nav-collapse -->
  </div>
</div>
