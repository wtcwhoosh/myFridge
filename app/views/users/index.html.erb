<table>
  <tr>
    <th>Picture</th>
    <th>Name</th>
    <th>Email</th>
    <th></th>
  </tr>
  <% @users.each do |user| %>
  <tr>
    <td><%= image_tag user.profilePicture_url(:small_thumb).to_s if user.profilePicture %>
    <% if user.firstName and user.lastName %>
    <td><%= "#{user.firstName} #{user.lastName}" %></td>
    <% else %>
    <td>No Name Defined</td>
    <% end  %>
    <td><%= user.email %></td>>
    <td><%= link_to 'Profile', user %></td>
    <% end %>
  </tr>
</table>



